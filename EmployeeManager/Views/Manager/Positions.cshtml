
@{
    ViewBag.Title = "Positions";
}
@model List<DataLayer.Models.Position>
<nav class="bg-white border-gray-200 dark:bg-gray-900">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4 bg-gray-100">
        <div class="hidden w-full md:block md:w-auto" id="navbar-default">
            <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                <li class="mr-2">
                    <a href="/manager/home" class="block py-2 px-3 text-gray-900 rounded-sm" aria-current="page">Home</a>
                </li>
                <li class="mr-2">
                    <a href="/manager/createemployee" class="block py-2 px-3 text-gray-900 rounded-sm">New employee</a>
                </li>
                <li class="mr-2">
                    <a href="/manager/positions" class="block py-2 px-3 text-gray-900 rounded-sm">Positions</a>
                </li>
                <li class="mr-2">
                    <a href="/auth/signout" class="block py-2 px-3 text-gray-900 rounded-sm">Sign out</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="max-w-4xl mx-auto mt-4">
    <div class="flow-root">
        <div class="mt-4 relative overflow-x-auto">
            <h5 class="inline-block mb-2 text-xl font-bold text-gray-900 dark:text-white">Employees</h5>
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            Position title
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Rate per unit
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Operation
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var row in Model)
                        {
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200">
                                <td class="px-6 py-4">
                                    @row.Title
                                </td>
                                <td class="px-6 py-4">
                                    @row.RewardRate
                                </td>
                                <td class="px-6 py-4 flex">
                                    <a href="/manager/DeletePosition?posId=@row.PositionId" class="ml-2 inline items-center px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-4 flex justify-center">
        <div>
            <a href="/manager/createposition" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">New position</a>
        </div>
    </div>
</div>

